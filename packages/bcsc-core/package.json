{
  "name": "react-native-bcsc-core",
  "version": "0.1.0",
  "description": "Functionality and data access for legacy bcsc application.",
  "main": "lib/module/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "source": "src/index.ts",
  "react-native": "src/index.ts",
  "exports": {
    ".": {
      "types": "./lib/typescript/src/index.d.ts",
      "default": "./lib/module/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "react-native.config.js",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace react-native-bcsc-core-example",
    "test": "jest",
    "typecheck": "tsc",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli android/build example/android/build example/android/app/build example/ios/build lib",
    "prepare": "bob build",
    "release": "release-it",
    "build": "yarn run clean && bob build"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcgov/bc-wallet-mobile.git"
  },
  "author": "Jason C. Leach <jason.leach@fullboar.ca> (https://github.com/jleach)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bcgov/bc-wallet-mobile/issues"
  },
  "homepage": "https://github.com/bcgov/bc-wallet-mobile#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "~19.6.0",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "~3.3.1",
    "@eslint/js": "^9.34.0",
    "@react-native-community/cli": "~15.0.1",
    "@react-native/eslint-config": "~0.73.2",
    "@release-it/conventional-changelog": "~9.0.4",
    "@types/jest": "~29.5.14",
    "@types/react": "~18.2.79",
    "commitlint": "~17.7.2",
    "del-cli": "~5.1.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "~10.1.8",
    "eslint-plugin-ft-flow": "^3.0.11",
    "eslint-plugin-prettier": "~5.2.6",
    "jest": "~29.6.4",
    "prettier": "~2.8.8",
    "react": "~18.3.1",
    "react-native": "0.73.11",
    "react-native-builder-bob": "~0.40.13",
    "release-it": "~17.10.0",
    "turbo": "~1.10.16",
    "typescript": "~5.5.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@4.0.2",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "prettier": {
    "printWidth": 100,
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      [
        "module",
        {
          "esm": true
        }
      ],
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "codegenConfig": {
    "name": "RNBcscCoreSpec",
    "type": "modules",
    "jsSrcsDir": "src",
    "outputDir": {
      "ios": "ios/generated",
      "android": "android/generated"
    },
    "android": {
      "javaPackageName": "com.bcsccore"
    },
    "includesGeneratedCode": true
  },
  "create-react-native-library": {
    "type": "turbo-module",
    "languages": "kotlin-swift",
    "version": "0.49.8"
  }
}
