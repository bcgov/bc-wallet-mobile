{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets/*": ["src/assets/*"],
      "@bcwallet-theme/*": ["src/bcwallet-theme/*"],
      "@bcsc-theme/*": ["src/bcsc-theme/*"],
      "@components/*": ["src/components/*"],
      "@events/*": ["src/events/*"],
      "@hooks/*": ["src/hooks/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": [
    "bifold-wallet/**/*",
    "bifold/**/*",
    "node_modules/**/*",
    "metro.config.js",
    "babel.config.js",
    "jest.config.js",
    "jestSetup.js"
  ]
}