  "scripts": {
    "android": "react-native run-android --active-arch-only",
    "ios": "react-native run-ios",
    "start": "react-native start --reset-cache",
    "test": "TZ=GMT jest --config ./jest.config.js",
    "test:watch": "TZ=GMT jest --config ./jest.config.js --watch",
    "test:coverage": "TZ=GMT jest --config ./jest.config.js --coverage",
    "test:snapshot": "TZ=GMT jest --updateSnapshot",
    "lint": "yarn lint:ts && yarn lint:swift && yarn lint:kotlin",
    "lint:ts": "eslint --color .",
    "lint:swift": "command -v swiftformat >/dev/null || { echo '⚠️  Install swiftformat: brew install swiftformat'; exit 1; } && swiftformat ios --lint --exclude ios/Pods --config ../.swiftformat",
    "lint:kotlin": "command -v ktlint >/dev/null || { echo '⚠️  Install ktlint: brew install ktlint'; exit 1; } && ktlint 'android/app/src/**/*.kt'",
    "format": "yarn format:ts && yarn format:swift && yarn format:c && yarn format:kotlin",
    "format:check": "yarn format:ts:check && yarn format:swift:check && yarn format:c:check && yarn format:kotlin:check",
    "format:ts": "prettier --log-level=error --write '**/*.+(js|jsx|json|ts|tsx|md|yml|yaml)'",
    "format:ts:check": "prettier --check '**/*.+(js|jsx|json|ts|tsx|md|yml|yaml)'",
    "format:swift": "command -v swiftformat >/dev/null || { echo '⚠️  Install swiftformat: brew install swiftformat'; exit 1; } && swiftformat ios --quiet --exclude Pods --config ../.swiftformat",
    "format:swift:check": "command -v swiftformat >/dev/null || { echo '⚠️  Install swiftformat: brew install swiftformat'; exit 1; } && swiftformat ios --lint --exclude Pods --config ../.swiftformat",
    "format:c": "command -v clang-format >/dev/null || { echo '⚠️  Install clang-format: brew install clang-format'; exit 1; } && find ios -path '*/Pods' -prune -o \\( -name '*.h' -o -name '*.m' \\) -print -exec clang-format -i -style=file:../.clang-format {} +",
    "format:c:check": "command -v clang-format >/dev/null || { echo '⚠️  Install clang-format: brew install clang-format'; exit 1; } && find ios -path '*/Pods' -prune -o \\( -name '*.h' -o -name '*.m' \\) -print -exec clang-format --dry-run -Werror -style=file:../.clang-format {} +",
    "format:kotlin": "command -v ktlint >/dev/null || { echo '⚠️  Install ktlint: brew install ktlint'; exit 1; } && ktlint -F 'android/app/src/**/*.kt'",
    "format:kotlin:check": "command -v ktlint >/dev/null || { echo '⚠️  Install ktlint: brew install ktlint'; exit 1; } && ktlint 'android/app/src/**/*.kt'",
    "typecheck": "tsc --noEmit",
    "ios:setup": "bundle install && cd ios && bundle exec pod install",
    "android:setup": "cd android && ./gradlew app:dependencies --write-locks",
    "setup": "yarn ios:setup && yarn android:setup",
    "snowplow:start": "adb reverse tcp:9090 tcp:9090 && docker run -p 9090:9090 snowplow/snowplow-micro:3.0.1 && echo 'Snowplow Micro analytics server started on port 9090'",
    "snowplow:stop": "docker ps -a -q --filter ancestor=snowplow/snowplow-micro:3.0.1 | xargs -r docker rm -f && echo 'Snowplow Micro analytics container stopped and removed'"
  },
